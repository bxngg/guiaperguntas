    <%- include ('partials/navbar.ejs') %>

<div class="container">
    
    <hr>
    <div class="card">
        <div class="card-body">
            <h1><%= question.title %></h1>

        </div>
        <div class="card-footer">
            <p><%= question.descrition %></p>

        </div>
    </div>
