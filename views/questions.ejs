         <input type="hidden" name="answerInput" value="<%= question.id %>" required>
         <button class="btn btn-primary">Responder</button>
     </form>

     <hr>

     <h3>Respostas</h3>

     <hr>

     <% answer.forEach(answer => {   %>
<br>
        <div class="card">
            <div class="card-body">
                    <span><i class="fas fa-user-astronaut"></i></span>
                    <label> <h6>Anonymous</h6></label>

            </div>
            <div class="card-footer">
                <%= answer.bodyAnswer %> <br>

            </div>
        </div>

     <% }) %>
</div>

